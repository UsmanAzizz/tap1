platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# === Patch Xcode 15: DT_TOOLCHAIN_DIR -> TOOLCHAIN_DIR ===
if ENV['DT_TOOLCHAIN_DIR'] && !ENV['TOOLCHAIN_DIR']
  ENV['TOOLCHAIN_DIR'] = ENV['DT_TOOLCHAIN_DIR']
end

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# === Flutter helper ===
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(
    File.join('..', 'Flutter', 'Generated.xcconfig'),
    __FILE__
  )

  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. Run flutter pub get first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end

  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}"
end

require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# =========================================================
# POST INSTALL PATCHES (INI YANG PENTING)
# =========================================================
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|

      # ---- FIX Xcode 15 TOOLCHAIN ----
      if config.build_settings['LIBRARY_SEARCH_PATHS']
        config.build_settings['LIBRARY_SEARCH_PATHS'] =
          config.build_settings['LIBRARY_SEARCH_PATHS'].map do |path|
            path.gsub('$(DT_TOOLCHAIN_DIR)', '$(TOOLCHAIN_DIR)')
          end
      end

      # ---- FIX ERROR: unsupported option '-G' ----
      %w[OTHER_CFLAGS OTHER_LDFLAGS].each do |flag|
        if config.build_settings[flag]
          config.build_settings[flag] =
            config.build_settings[flag]
              .split
              .reject { |f| f == '-G' }
              .join(' ')
        end
      end

      # ---- Pastikan deployment target aman ----
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
