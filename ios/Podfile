platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Xcode 15 fix
if ENV['DT_TOOLCHAIN_DIR'] && !ENV['TOOLCHAIN_DIR']
  ENV['TOOLCHAIN_DIR'] = ENV['DT_TOOLCHAIN_DIR']
end

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(
    File.join('..', 'Flutter', 'Generated.xcconfig'),
    __FILE__
  )
  raise 'Run flutter pub get first' unless File.exist?(generated_xcode_build_settings_path)

  File.foreach(generated_xcode_build_settings_path) do |line|
    return Regexp.last_match(1).strip if line =~ /FLUTTER_ROOT\=(.*)/
  end
end

require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# =========================================================
# ðŸ”¥ POST INSTALL â€” FIX SEMUA TARGET (Pods + Runner)
# =========================================================
post_install do |installer|

  # ---- PATCH PODS PROJECT ----
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      %w[OTHER_CFLAGS OTHER_LDFLAGS].each do |key|
        if config.build_settings[key]
          config.build_settings[key] =
            config.build_settings[key]
              .split
              .reject { |f| f == '-G' }
              .join(' ')
        end
      end

      if config.build_settings['LIBRARY_SEARCH_PATHS']
        config.build_settings['LIBRARY_SEARCH_PATHS'] =
          config.build_settings['LIBRARY_SEARCH_PATHS']
            .map { |p| p.gsub('$(DT_TOOLCHAIN_DIR)', '$(TOOLCHAIN_DIR)') }
      end

      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end

  # ---- ðŸ”¥ PATCH USER PROJECT (Runner.xcodeproj) ----
  installer.aggregate_targets.each do |aggregate_target|
    aggregate_target.user_project.native_targets.each do |native_target|
      native_target.build_configurations.each do |config|
        %w[OTHER_CFLAGS OTHER_LDFLAGS].each do |key|
          if config.build_settings[key]
            config.build_settings[key] =
              config.build_settings[key]
                .split
                .reject { |f| f == '-G' }
                .join(' ')
          end
        end
      end
    end
  end
end
